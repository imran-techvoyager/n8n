generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Project   Project[]
}

// the icon will have { type: 'emoji' | 'icon'; value: string } | null; in json format.
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  icon        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  workflows Workflow[]
}

model Workflow {
  id         String   @id @default(cuid())
  name       String
  active     Boolean  @default(false)
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  projectId  String

  project Project @relation(fields: [projectId], references: [id])
  Node    Node[]
  Edge    Edge[]
}

model Node {
  id          String   @id @default(uuid())
  name        String
  type        String
  description String?
  parameters  Json // have to think if need it or not. 
  position    Json // [x,y]
  data        Json // any other data will be come here. 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workflowId  String

  workflow Workflow @relation(fields: [workflowId], references: [id])

  outgoingEdges Edge[] @relation("SourceNode")
  incomingEdges Edge[] @relation("TargetNode")
}

model Edge {
  id         String   @id @default(uuid())
  source     String
  target     String
  workflowId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workflow   Workflow @relation(fields: [workflowId], references: [id])
  sourceNode Node     @relation("SourceNode", fields: [source], references: [id])
  targetNode Node     @relation("TargetNode", fields: [target], references: [id])
}
