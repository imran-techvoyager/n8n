enum ExecutionStatus {
  Canceled
  Crashed
  Error
  // New
  Starting
  Running
  Success
  // Unknown
  // Waiting
}

model Execution {
  id         String          @id @default(cuid())
  workflowId String? // user can run an unsafe workflow
  finished   Boolean         @default(false)
  // mode       String  @default("manual") // i will see later if i need this or not, currently i don't need this.
  status     ExecutionStatus @default(Starting)

  createdAt DateTime  @default(now())
  startedAt DateTime?
  stoppedAt DateTime? 

  data Json? // in this i'll store the nodes, and edges and the other metadata at the time of execution.

  workflow Workflow? @relation(fields: [workflowId], references: [id])

  @@index([workflowId])
}

